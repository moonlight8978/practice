<% if @post.errors.any? %>
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post, scope: :post, local: true do |f| %>
  <%= f.label :creator, 'Creator' %>
  <%= f.text_field :creator %>

  <br><br>

  <%= f.label :content, 'Content' %>
  <%= f.text_field :content %>

  <br><br>

  <%= f.button 'Create', type: 'submit' %>
<% end %>
